<%- include ('templates/header'); -%>

	<div class='container'>
		<div class='jumbotron'>
			<h3> Menu Items (Edit)</h3>
			<a class='btn btn-primary' href='/'>Home</a>
		</div>
		<h3>Edit A Menu Item</h3>
		<form action='/menu/<%=author.authorId%>?_method=PUT' method='POST'>
		    <div class='form-group row'>
				<label for='itemId' class='col-sm-4 col-form-label'>Item Id</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='itemId' name='itemId' value='<%=menu.itemId%>' disabled>
				</div>
			</div>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'></label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' value='<%=author.firstName%>' required>
				</div>
			</div>
			
			</div>
		</form>
	</div>