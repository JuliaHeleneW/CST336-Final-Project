<%- include('templates/header.ejs') %>
<h1> Adding New Item </h1></br>

  <!------ containder ---------->
    <div id="adding">
      
        <div class="container">
            <div id="adding-row" class="row justify-content-center align-items-center">
                <div id="adding-column" class="col-md-6">
                    <div id="adding-box" class="col-md-12">
                        <form id="adding-form" class="form" action="/restaurant/new" method="post">
                          
                            <!------ username ---------->
                            <div class="form-group">
                                <label for="username" class="text-info"style="color:black;">Name:</label><br>
                                <input type="text" name="name" id="name" class="form-control">
                            </div>
                            <!------ password ---------->
                            <div class="form-group">
                                <label for="password" class="text-info"style="color:black;">Location:</label><br>
                                <input type="text" name="location" id="location" class="form-control">
                            </div>
                             <div class="form-group">
                                <label for="username" class="text-info"style="color:black;">Hours of operation:</label><br>
                                <input type="text" name="hours" id="hours" class="form-control">
                            </div>
                            Category:
                            <select name="category">
                                <% categories.forEach(function(i){ %>
                                    <option> <%=i.category%>  </option>
                                <% }); %>
                            </select>
                            Pickup:
                            <select name="pickup">
                                <option value="Y"> YES </option>
                                <option value="N"> NO </option>
                            </select>
                            Delivery:
                            <select name="delivery">
                                <option value="Y"> YES </option>
                                <option value="N"> NO </option>
                            </select>
                		</div>


                          <!------ submit btn ---------->

                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
</body>
</html>