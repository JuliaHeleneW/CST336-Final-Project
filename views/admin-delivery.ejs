<!DOCTYPE html>
<html>
    <head>
        <title> </title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/css/styles.css"/>
        <script>
        
        $(document).ready(function(){
            $(".removeItem").on("click", function(event){
                
                if(!confirm("Delete item?"))
                {
                    event.preventDefault();//prevents default behavior of the links
                }
                
            });//click
            
        });//document ready
        
        
        </script>
    </head>
    <body>
        
        <h1> Admin Section </h1>
        <h2>
            
        <form action="/logout">
          <button> Logout </button>
        </form>
        
        <form action="/delivery/new">
          <button> Add New Item </button>
        </form>
        
        <form action="/admin">
          <button> Go to Restaurants </button>
        </form>
        
               <h2><%=items%></h2>
        
        <% foodProducts.forEach(function(products){  %>
        <h4>
            
            <!--<image src= //products.imageLink %> ></image>-->
            <%= products.name %>
            [<a href="/delivery/<%=products.deliveryId%>/edit">UPDATE</a>] 
            [<a class="removeItem" href="/delivery/<%=products.deliveryId%>/delete">DELETE</a>] 
            <br>
        </h4>
        <% }); %>
        
       
        <% /*})*/ %>
        
        </h2>

         </form>       
        <form action="/logout">
          <h2><button id="back"> Back </button></h2>
        </form>

    </body>
</html>